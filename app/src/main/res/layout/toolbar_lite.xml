<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/srt_toolbar"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/toolbarImageViewBack"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_gravity="left"

        android:padding="5dp"

        app:srcCompat="@drawable/close" />

    <TextView
        android:id="@+id/toolbarTextViewTitle"
        style="@style/text_title_nano"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:layout_marginStart="@dimen/start_max_dimen"
        android:gravity="center"
        android:text=""

        app:layout_constraintBottom_toBottomOf="@+id/toolbarImageViewBack"
        app:layout_constraintStart_toEndOf="@+id/toolbarImageViewBack"
        app:layout_constraintTop_toTopOf="@+id/toolbarImageViewBack" />


    <ImageView
        android:id="@+id/toolbarImageViewRight"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_gravity="right"
        android:layout_marginEnd="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"

        />

</androidx.appcompat.widget.Toolbar>



