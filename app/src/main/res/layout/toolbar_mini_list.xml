<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/srt_toolbar"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/toolbarImageViewBack"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_gravity="left"

        android:padding="5dp"

        app:srcCompat="@drawable/back" />
<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_gravity="center">
    <TextView
        android:id="@+id/toolbarTextViewTitle"
        style="@style/text_standart_big"
        android:text="Активносить"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginHorizontal="@dimen/start_dimen"

        android:gravity="center"
        />

    <TextView
        android:id="@+id/toolbarTextViewText"
        style="@style/text_minim_big"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginHorizontal="@dimen/start_dimen"

        android:gravity="center"
       />

</LinearLayout>
    <ImageView
    android:id="@+id/toolbarImageViewRight"
    android:layout_width="35dp"
    android:layout_height="35dp"
    android:layout_gravity="right"
        android:layout_marginEnd="@dimen/start_max_dimen"

    android:padding="5dp"

     />
</androidx.appcompat.widget.Toolbar>



